" Plugin 명시
call plug#begin('~/.vim/plugged')
Plug 'junegunn/rainbow_parentheses.vim'
Plug 'preservim/nerdtree'
Plug 'Chiel92/vim-autoformat'
Plug '42Paris/42header'
Plug 'nathanaelkane/vim-indent-guides'
call plug#end()

" rainbow_parentheses.vim 설정
hi MatchParen cterm=none ctermbg=green ctermfg=blue

" color 설정
if has('termguicolors')
    set termguicolors
endif

colorscheme jellybeans

map <F3> <ESC>:NERDTreeToggle<CR>
imap <F3> <ESC>:NERDTreeToggle<CR>

" nerdtree 설정
let NERDTreeShowHidden=1
let g:NERDTreeDirArrowExpandable = '▸'
let g:NERDTreeDirArrowCollapsible = '▾'

" vim-42header 설정 (자신의 intra 아이디 및 이메일을 작성)
let g:hdr42user = 'sangHyle'
let g:hdr42mail = 'sangHyle@student.42seoul.kr'

" vim-indent-guides
let g:indentguides_spacechar = '┆' 	"<< space를 표시하는 문자를 다르게 지정 해줄 수 있습니다.
let g:indentguides_tabchar = '|' 	"<< tab을 표시하는 문자를 다르게 지정 해줄 수 있습니다.
let g:indent_guides_enable_on_vim_startup = 1	"vim 실행시 기본값으로 설정.

if has("syntax")     " syntax가 있는 파일에서
      syntax on        " syntax highlighting 기능을 on
endif

set nu               " 왼쪽에 줄 번호를 표시
set mouse=a          " vim에서 마우스를 사용
set autoindent       " 자동으로 들여쓰기
"set cursorline       " 커서가 있는 라인 강조
set ignorecase       " 검색 기능 사용 시 대소문자 무시
set ruler            " 오른쪽 하단에 현재 커서의 위치 표시
set title            " 열려 있는 파일을 창 타이틀에 표
set bg=dark		 " 배경을 밝게
